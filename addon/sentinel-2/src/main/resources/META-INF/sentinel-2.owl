   <rdf:Description rdf:about="&s2;userLevel2AProduct">
      <dhus:metadataExtractor  rdf:parseType="Literal">
      <![CDATA[
         declare namespace
            utils="java:fr.gael.drb.cortex.topic.sentinel2.Sentinel2Utils";

